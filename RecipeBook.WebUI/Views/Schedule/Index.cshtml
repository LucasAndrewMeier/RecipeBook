@model RecipeBook.WebUI.Models.ScheduleIndexViewModel

@{
    ViewBag.Title = "RecipeBook: Your Schedule";
}
<head>
    <style>
        table {
            border-collapse: separate;
            border-spacing: 0;
        }

        th,
        td {
            padding: 10px 15px;
        }

        thead {
            background: #395870;
            color: #fff;
        }

        tbody tr:nth-child(even) {
            background: #f0f0f2;
        }

        td {
            border-bottom: 1px solid #cecfd5;
            border-right: 1px solid #cecfd5;
        }

            td:first-child {
                border-left: 1px solid #cecfd5;
            }
    </style>
</head>


<h2>This Weeks Schedule</h2>
<table class="table" id="calendar">
    <thead>
        <tr>
            <th scope="col">Sun</th>
            <th scope="col">Mon</th>
            <th scope="col">Tue</th>
            <th scope="col">Wed</th>
            <th scope="col">Thu</th>
            <th scope="col">Fri</th>
            <th scope="col">Sat</th>
        </tr>
    </thead>
    <tbody id="calendarBody">
        <tr>
            <td>
                @foreach (var line in Model.Schedule.Lines)
                {
                <span class="text-left">@line.Recipe.Name</span>
                <span class="text-right">@line.Recipe.Cuisine</span>
                <br />
                }
            </td>
        </tr>
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Select More Recipes</a>
</div>

