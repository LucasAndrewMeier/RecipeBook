<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title - RecipeBook</title>
    <style>

        body {
            font-family: Arial, Helvetica, sans-serif;
            margin-left: auto;
            margin-right: auto;
            max-width: 1920px;
        }

        * {
            box-sizing: border-box;
        }

        a {
            color: #1D3D45;
            font-weight: 600;
            font-size: x-large;
        }
        /* Set a style for all buttons */
        button, select, input, .menuItems {
            font-weight: 600;
            font-size: medium;
            color: white;
            padding: 5px 5px;
            margin: 5px 5px;
            border: none;
            cursor: pointer;
            width: 80%;
            opacity: 0.8;
            border-radius: 26px;
            float: right;
            text-align: center;
        }

        .buttonLogIn {
            color: #1D3D45;
            background-color: #ffffff;
            border: 2px solid #1D3D45;
        }

        .buttonSignUp {
            border: 2px solid #04AA6D;
            background-color: #04AA6D;
        }

        button:hover {
            opacity: 1;
        }
        /* Extra styles for the cancel button */
        .cancelbtn {
            padding: 14px 20px;
            background-color: #f44336;
        }
        /* Float cancel and signup buttons and add an equal width */
        .cancelbtn, .signupbtn {
            float: left;
            width: 50%;
        }
        /* Add padding to container elements */
        .container {
            padding: 20px;
        }
        /* The Modal (background) */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: #474e5d;
            padding-top: 50px;
        }
        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }
        /* The Close Button (x) */
        .close {
            position: absolute;
            right: 35px;
            top: 15px;
            font-size: 40px;
            font-weight: bold;
            color: #f1f1f1;
        }

            .close:hover,
            .close:focus {
                color: #f44336;
                cursor: pointer;
            }
        /* Clear floats */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .navbar {
            background-color: white;
            padding: 20px;
        }

        .navbar-nav {
            align-content: center;
        }

        .MenuButton {
            flex: 0 0 100px;
            background: none !important;
            opacity: 0.8;
        }

        .text-styling {
            color: black;
            font-weight: 700;
            font-size: x-large;
            margin-left: 2em;
            margin-right: 2em;
        }

            .text-styling:hover {
                color: #04AA6D;
                background-color: white;
                text-decoration: none;
            }

        .MenuButton:hover {
            opacity: 1;
            color: #1D3D45;
        }

        a:hover {
            text-decoration: none;
            color: #fff;
            background-color: #04AA6D;
        }

        a:active, a:enabled {
            color: #fff;
            background-color: #04AA6D;
        }

        .not-selected-this {
            color: #04AA6D;
            background-color: #ffffff;
            border: 2px solid #04AA6D;
        }

        .selected-this {
            color: #fff;
            background-color: #04AA6D;
            border: 2px solid #04AA6D;
        }

        #links {
            display: flex;
            align-content: flex-start;
        }

        #Title {
            font-size: 62px;
        }
        #id02 {
            background-color: rgba(0,0,0,0.8);
        }
        .modal-content {
            display: flex;
            justify-content:center;
            
            
        }
        .modal-header{
            justify-self:center;
        }
        .modal-body{
            max-width:768px;
            margin-left:auto;
            margin-right:auto;
        }

        /* Change styles for cancel button and signup button on extra small screens */
        @@media screen and (max-width: 768px) {
            .cancelbtn, .signupbtn {
                width: 100%;
            }

            #Title {
                display: flex;
                justify-content: center;
                font-size: 48px;
            }

            #categories {
                display: block;
            }

            #links {
                justify-content: space-evenly;
            }

            .text-styling {
                margin: auto;
            }

            #image {
                display: none;
            }
        }
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-right">
            <button class="buttonLogIn" onclick="document.getElementById('id02').style.display='block'" style="width:auto;">Login</button>
            <button class="buttonSignUp" onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Sign Up</button>
        </div>
        
        <div class="page-header">
            
            <h1 id="Title" style="color:black; margin-top:50px; font-weight: 700;"><img src="~/Content/Images/restaurant-895427_1920.png" id="image" alt="logo" width="250" />Recipe Book</h1>

            <br />
            <div id="links" class="navbar-default">
                @Html.ShowButton("Admin", "new { returnUrl = Request.Url.PathAndQuery }")
                @Html.ActionLink("Schedule", "Index", "Schedule", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "text-styling" })
                @Html.ActionLink("Recipes", "List", "Recipe", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "text-styling" })

            </div>

        </div>
                
    </div>
    
        
    @using (Html.BeginForm("Login", "Account", null, FormMethod.Post))
    {
<div id="id02" class="modal">
    <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
    
    <form class="modal-content" action="/action_page.php">
        <h1 class="modal-header" style="color:white;font-weight:700;">Login</h1>
        <div class="modal-body">

            <input type="text" style="color: black; max-width: 500px;" placeholder="UserName" name="UserName" required />
            <br />

            <input type="password" style="color: black; max-width: 500px;" placeholder="Password" name="Password" required />

            <div class="clearfix" style="margin-left:auto;margin-right:auto;">
                <button type="submit" style="color: darkgray; max-width: 500px;" class="btn-success">Log In</button>
                <button type="button" style="color: black; max-width: 500px;" onclick="document.getElementById('id02').style.display='none'" class="btn-default">Cancel</button>
            </div>
        </div>
    </form>
</div>}
    <!--End Log In Modal-->

    @RenderBody()

    <hr />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - RecipeBook</p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        // Get modal
     
        var modal2 = document.getElementById('id02');
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal2) {
                modal2.style.display = "none";
            }
        }

    </script>
</body>
</html>