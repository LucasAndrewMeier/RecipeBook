<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet"/>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <title>@ViewBag.Title - RecipeBook</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">

        <a class="navbar-brand" href="#" style="margin:1em">Recipe Book</a>

        <div class="text-right" style="margin:1em">
            @Html.ShowButton("Admin", "new { returnUrl = Request.Url.PathAndQuery }")
            @Html.ActionLink("Log In", "Login", "Account", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default navbar-btn btn-sm" })
        </div>
    </div>
    <div>
        @Html.ActionLink("Schedule", "Index", "Schedule", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default navbar-btn" })
        @Html.ActionLink("Recipe Book", "List","Recipe", new {returnUrl = Request.Url.PathAndQuery }, new {@class = "btn btn-default navbar-btn" })
        
    </div>


    @RenderBody()

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - RecipeBook</p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>