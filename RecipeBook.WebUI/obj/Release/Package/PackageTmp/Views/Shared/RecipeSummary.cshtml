@model RecipeBook.Domain.Entities.Recipe

<div class="well">
    
    <h3 class="pull-left">
        <b>@Model.Name</b>

        <span style="margin-right:8px;">@Model.Cuisine</span>
    </h3>

    @using (Html.BeginForm("AddToSchedule", "Schedule", "Day"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.RecipeID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)

            <select id="day" class="buttonLogIn" name="day" style="">
                <option class="buttonLogIn" value="0">Sunday</option>
                <option class="buttonLogIn" value="1">Monday</option>
                <option class="buttonLogIn" value="2">Tuesday</option>
                <option class="buttonLogIn" value="3">Wednesday</option>
                <option class="buttonLogIn" value="4">Thursday</option>
                <option class="buttonLogIn" value="5">Friday</option>
                <option class="buttonLogIn" value="6">Saturday</option>
            </select>
            <input type="submit" class="buttonSignUp" value="Add" />
        </div>
    }

    <br />
    <br />
    <br />
    <span class="lead">
        <label>Ingredients</label>
        <br />
        @Model.Ingredients
        <br />
        <br />
        <label>Directions</label>
        <br />
        @Model.Directions
    </span>

</div>